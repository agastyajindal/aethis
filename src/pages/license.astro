    margin-bottom: 2rem;
    color: var(--sl-color-white);
  }

  .legal-section {
    margin-bottom: 2.5rem;
    padding: 1.5rem;
    background: var(--sl-color-gray-6);
    border-radius: 12px;
    border: 1px solid var(--sl-color-gray-5);
  }

  .legal-section h2 {
    font-size: 1.25rem;
    margin-bottom: 1rem;
    color: var(--sl-color-white);
  }

  .legal-section p {
    color: var(--sl-color-text);
    line-height: 1.7;
    margin-bottom: 0.75rem;
  }

  .legal-section ul {
    color: var(--sl-color-text);
    line-height: 1.7;
    padding-left: 1.5rem;
    margin: 0.75rem 0;
  }

  .legal-section li {
    margin-bottom: 0.5rem;
  }

  .legal-section a {
    color: var(--sl-color-accent);
  }

  .warning {
    color: #f87171 !important;
    font-weight: 500;
    margin-top: 1rem;
  }

  .last-updated {
    text-align: center;
    color: var(--sl-color-gray-3);
    font-size: 0.875rem;
    margin-top: 2rem;
