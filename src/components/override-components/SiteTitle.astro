---
import config from "@/config/config.json" assert { type: "json" };
import ImageMod from "../ImageMod.astro";
const { siteTitle, siteTitleHref } = Astro.locals.starlightRoute;

const { src, srcDarkmode }: { src?: string; srcDarkmode?: string } =
  Astro.props;

const theme_switcher = config.settings.theme_switcher;
const {
  logo,
  logo_darkmode,
  logo_width,
  logo_height,
  logo_text,
  title,
}: {
  logo: string;
  logo_darkmode: string;
  logo_width: any;
  logo_height: any;
  logo_text: string;
  title: string;
} = config.site;
---

<a href={siteTitleHref} class="navbar-brand inline-block">
  {
    src || srcDarkmode || logo || logo_darkmode ? (
      <>
        <ImageMod
          src={src ? src : logo}
          class={`inline-block  ${theme_switcher && "dark:hidden"}`}
          width={logo_width.replace("px", "") * 2}
          height={logo_height.replace("px", "") * 2}
          alt={title}
          style={{
            height: logo_height.replace("px", "") + "px",
            width: logo_width.replace("px", "") + "px",
          }}
          format="webp"
        />

        {theme_switcher && (
          <ImageMod
            src={srcDarkmode ? srcDarkmode : logo_darkmode}
            class={`hidden dark:inline-block`}
            width={logo_width.replace("px", "") * 2}
            height={logo_height.replace("px", "") * 2}
            alt={title}
            style={{
              height: logo_height.replace("px", "") + "px",
              width: logo_width.replace("px", "") + "px",
            }}
            format="webp"
          />
        )}
      </>
    ) : (
      <span class="logo-text">{logo_text || siteTitle || title}</span>
    )
  }
</a>

<style>
  .navbar-brand {
    text-decoration: none;
  }

  .logo-text {
    font-size: 1.5rem;
    font-weight: 700;
    letter-spacing: -0.03em;
    background: linear-gradient(135deg, #ffffff 0%, #D76D77 100%);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    transition: all 0.3s ease;
  }

  .navbar-brand:hover .logo-text {
    background: linear-gradient(135deg, #D76D77 0%, #ffca7b 100%);
    -webkit-background-clip: text;
    background-clip: text;
  }

  :global([data-theme="light"]) .logo-text {
    background: linear-gradient(135deg, #1a1a1a 0%, #D76D77 100%);
    -webkit-background-clip: text;
    background-clip: text;
  }
</style>
