---
interface Control {
  name: string;
  range: string;
  description: string;
}

interface Props {
  title?: string;
  controls: Control[];
  color?: string;
  columns?: 1 | 2 | 3;
}

const { title, controls, color = '#D76D77', columns = 2 } = Astro.props;
---

<div class="control-section">
  {title && (
    <div class="section-header" style={`--accent-color: ${color}`}>
      <div class="header-icon">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="3"/>
          <path d="M12 1v6m0 6v10M1 12h6m6 0h10"/>
        </svg>
      </div>
      <h4 class="section-title">{title}</h4>
    </div>
  )}
  <div class="controls-grid" style={`--columns: ${columns}; --accent-color: ${color}`}>
    {controls.map((control) => (
      <div class="control-card">
        <div class="card-top">
          <span class="control-name">{control.name}</span>
          <span class="control-range">{control.range}</span>
        </div>
        <p class="control-desc">{control.description}</p>
      </div>
    ))}
  </div>
</div>

<style>
  .control-section {
    margin: 2rem 0 2.5rem 0;
  }

  .control-section:first-child {
    margin-top: 0;
  }

  .section-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1.25rem;
  }

  .header-icon {
    width: 32px;
    height: 32px;
    border-radius: 8px;
    background: linear-gradient(135deg, var(--accent-color) 0%, color-mix(in srgb, var(--accent-color) 70%, black) 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    flex-shrink: 0;
  }

  .section-title {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--sl-color-text-accent);
    margin: 0;
    line-height: 1.4;
    letter-spacing: 0.01em;
  }

  .controls-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 0.875rem;
  }

  @media (min-width: 640px) {
    .controls-grid {
      grid-template-columns: repeat(var(--columns), 1fr);
    }
  }

  .control-card {
    background: linear-gradient(145deg,
      color-mix(in srgb, var(--sl-color-gray-6) 100%, transparent) 0%,
      color-mix(in srgb, var(--sl-color-gray-6) 80%, var(--sl-color-black)) 100%
    );
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 12px;
    padding: 1.25rem;
    transition: all 0.25s ease;
    position: relative;
    overflow: hidden;
  }

  .control-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, var(--accent-color) 0%, transparent 100%);
    opacity: 0;
    transition: opacity 0.25s ease;
  }

  .control-card:hover {
    border-color: color-mix(in srgb, var(--accent-color) 40%, var(--sl-color-gray-5));
    transform: translateY(-2px);
    box-shadow: 0 8px 24px -8px rgba(0, 0, 0, 0.3);
  }

  .control-card:hover::before {
    opacity: 1;
  }

  .card-top {
    display: flex;
    flex-direction: column;
    gap: 0.375rem;
    margin-bottom: 0.75rem;
  }

  .control-name {
    font-weight: 600;
    font-size: 0.95rem;
    color: var(--sl-color-text-accent);
    line-height: 1.5;
    letter-spacing: 0.02em;
  }

  .control-range {
    font-size: 0.8rem;
    color: var(--accent-color);
    font-family: var(--sl-font-mono);
    font-weight: 500;
    letter-spacing: 0.03em;
    opacity: 0.9;
    line-height: 1.4;
  }

  .control-desc {
    font-size: 0.875rem;
    color: var(--sl-color-text);
    line-height: 1.6;
    margin: 0;
    opacity: 0.85;
    letter-spacing: 0.01em;
  }

</style>
